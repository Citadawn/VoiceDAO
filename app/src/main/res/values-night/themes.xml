<resources>
    <!-- 夜间模式主题，继承自日间主题 -->
    <style name="Theme.TextToSpeechApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 禁用系统ActionBar，使用自定义Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 主题主色调 -->
        <item name="colorPrimary">@color/main_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 全局Toolbar样式 -->
        <item name="toolbarStyle">@style/AppToolbar</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">@color/main_dark</item>
        <!-- 状态栏文字颜色为白色（适配深色背景） -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>