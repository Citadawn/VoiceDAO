<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 单层阴影 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/text_highlight" />
            <corners android:radius="@dimen/dp_16" />
            <padding
                android:bottom="@dimen/dp_4"
                android:right="@dimen/dp_4" />
        </shape>
    </item>

    <!-- 主背景层 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/theme_light_bg"
                android:endColor="@color/theme_lighter_bg"
                android:startColor="@color/pure_white" />
            <corners android:radius="@dimen/dp_16" />
            <stroke
                android:width="2dp"
                android:color="@color/focus_border" />
        </shape>
    </item>
</layer-list> 