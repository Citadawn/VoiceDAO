<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@android:color/white"
        app:title="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp">
            <!-- 你的页面内容（EditText等）全部放在这里，去掉Toolbar本身和外层NestedScrollView -->

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:hint="@string/hint_input_text"
                android:textSize="16sp"
                android:gravity="center"
                android:minLines="3"
                android:maxLines="10"
                android:inputType="textMultiLine"
                android:windowSoftInputMode="stateHidden"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layoutEditButtons"
                android:background="@drawable/edittext_bg"
                android:textColor="@color/main_dark"
                android:textCursorDrawable="@drawable/cursor_main_dark"
                android:textSelectHandleLeft="@drawable/handle_main_dark_left"
                android:textSelectHandleRight="@drawable/handle_main_dark_right"
                android:textSelectHandle="@drawable/handle_main_dark_center"
                android:textColorHighlight="#33272727" />

            <LinearLayout
                android:id="@+id/layoutEditButtons"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/editText"
                app:layout_constraintBottom_toBottomOf="@id/editText"
                app:layout_constraintStart_toEndOf="@id/editText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnClear"
                    android:layout_width="44dp"
                    android:layout_height="28dp"
                    android:text="@string/btn_clear"
                    android:textSize="12sp"
                    android:background="@drawable/btn_main_bg"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:stateListAnimator="@animator/btn_scale_animator" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOpenEditor"
                    android:layout_width="44dp"
                    android:layout_height="28dp"
                    android:text="@string/btn_open_editor"
                    android:textSize="12sp"
                    android:background="@drawable/btn_main_bg"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:stateListAnimator="@animator/btn_scale_animator"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- 语速调节区块 两行结构 -->
            <LinearLayout
                android:id="@+id/layoutSpeedBlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/editText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 第一行：标题、数值、重置 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvSpeedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_speed"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:layout_marginEnd="0dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="："
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp" />
                    <TextView
                        android:id="@+id/textSpeechRateValue"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="1.00"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:layout_marginEnd="8dp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSpeedReset"
                        android:layout_width="44dp"
                        android:layout_height="28dp"
                        android:text="@string/btn_reset"
                        android:textSize="12sp"
                        android:background="@drawable/btn_main_bg"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:stateListAnimator="@animator/btn_scale_animator" />
                </LinearLayout>

                <!-- 第二行：减号、滑块、加号 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:id="@+id/btnSpeedMinus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="22sp"
                        android:gravity="center|center_vertical"
                        android:textColor="#272727"
                        android:background="@android:color/transparent" />
                    <SeekBar
                        android:id="@+id/seekBarSpeed"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:max="15"
                        android:progress="5"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:thumbTint="@color/main_dark"
                        android:progressTint="@color/main_dark"
                        android:backgroundTint="@color/main_dark" />
                    <TextView
                        android:id="@+id/btnSpeedPlus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="22sp"
                        android:gravity="center|center_vertical"
                        android:textColor="#272727"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvSpeedSetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/layoutSpeedBlock"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 音调调节区块 两行结构 -->
            <LinearLayout
                android:id="@+id/layoutPitchBlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvSpeedSetResult"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 第一行：标题、数值、重置 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tvPitchLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_pitch"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:layout_marginEnd="0dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="："
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp" />
                    <TextView
                        android:id="@+id/textPitchValue"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="1.00"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:layout_marginEnd="8dp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPitchReset"
                        android:layout_width="44dp"
                        android:layout_height="28dp"
                        android:text="@string/btn_reset"
                        android:textSize="12sp"
                        android:background="@drawable/btn_main_bg"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:stateListAnimator="@animator/btn_scale_animator" />
                </LinearLayout>

                <!-- 第二行：减号、滑块、加号 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:id="@+id/btnPitchMinus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="22sp"
                        android:gravity="center|center_vertical"
                        android:textColor="#272727"
                        android:background="@android:color/transparent" />
                    <SeekBar
                        android:id="@+id/seekBarPitch"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:max="15"
                        android:progress="5"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:thumbTint="@color/main_dark"
                        android:progressTint="@color/main_dark"
                        android:backgroundTint="@color/main_dark" />
                    <TextView
                        android:id="@+id/btnPitchPlus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="22sp"
                        android:gravity="center|center_vertical"
                        android:textColor="#272727"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPitchSetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/layoutPitchBlock"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 语言和发音人选择区块（纵向结构，每项独占一行） -->
            <LinearLayout
                android:id="@+id/layoutLangVoiceBlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvPitchSetResult"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 第一行：语言 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tvLangLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_language"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginEnd="8dp" />
                    <Spinner
                        android:id="@+id/spinnerLanguage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:minWidth="120dp"
                        android:minHeight="48dp"
                        android:scrollbars="horizontal" />
                </LinearLayout>

                <!-- 第二行：发音人 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tvVoiceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_voice"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginEnd="8dp" />
                    <Spinner
                        android:id="@+id/spinnerVoice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:minWidth="120dp"
                        android:minHeight="48dp"
                        android:scrollbars="horizontal" />
                </LinearLayout>

                <!-- 第三行：重置按钮 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLangVoiceReset"
                    android:layout_width="44dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end"
                    android:background="@drawable/btn_main_bg"
                    android:gravity="center"
                    android:text="@string/btn_reset"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:tooltipText="@string/tip_reset_lang_voice"
                    android:stateListAnimator="@animator/btn_scale_animator"
                    tools:targetApi="26" />
            </LinearLayout>

            <!-- 朗读/停止按钮横向排列，约束在语言发音人区块下方 -->
            <LinearLayout
                android:id="@+id/layoutSpeakRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/layoutLangVoiceBlock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSpeak"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:text="@string/btn_speak"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_main_bg"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"
                    android:stateListAnimator="@animator/btn_scale_animator" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStop"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/btn_stop_speak"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_main_bg"
                    android:textSize="18sp"
                    android:stateListAnimator="@animator/btn_scale_animator" />
            </LinearLayout>

            <!-- 新版：保存为音频和取消保存同一行，设置保存目录在下方，状态信息再下方 -->
            <LinearLayout
                android:id="@+id/layoutSaveAudioRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/layoutSpeakRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveAudio"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:text="@string/btn_save_audio"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_main_bg"
                    android:textSize="18sp"
                    android:stateListAnimator="@animator/btn_scale_animator"
                    android:layout_marginEnd="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancelSave"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/btn_cancel_save"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_main_bg"
                    android:textSize="16sp"
                    android:stateListAnimator="@animator/btn_scale_animator" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSetSaveDir"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/btn_set_save_dir"
                android:textColor="@color/white"
                android:background="@drawable/btn_main_bg"
                android:textSize="16sp"
                android:stateListAnimator="@animator/btn_scale_animator"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/layoutSaveAudioRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 状态信息合并版：每项一行，标题加粗，内容正常 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:minHeight="60dp"
                app:layout_constraintTop_toBottomOf="@id/btnSetSaveDir"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 状态大标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_info_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />
                <!-- 状态信息合并版：每项一行，标题加粗，内容正常 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_tts_engine_status"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvTtsEngineStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_audio_save_dir"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvAudioSaveDir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_tts_speak_status"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvTtsSpeakStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空闲"
                        android:textColor="#4CAF50"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>