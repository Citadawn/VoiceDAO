<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 兼容所有版本的Toolbar样式 -->
    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/main_dark</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <!-- 应用主题（AppCompat/Material2） -->
    <style name="Theme.TextToSpeechApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 禁用系统ActionBar，使用自定义Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/main_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="android:statusBarColor">@color/main_dark</item>
    </style>
</resources>