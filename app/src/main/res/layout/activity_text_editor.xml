<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editorToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@android:color/white"
        app:title="@string/title_text_editor"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp_64"
        app:layout_constraintTop_toBottomOf="@id/editorToolbar"
        app:layout_constraintBottom_toTopOf="@id/layoutEditorBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_input_editor"
            android:textSize="@dimen/sp_16"
            android:gravity="top|start"
            android:minLines="10"
            android:maxLines="100"
            android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp"
            android:scrollbars="vertical"
            android:background="@null"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/hint_gray"
            android:textCursorDrawable="@drawable/cursor_main_dark"
            android:textColorHighlight="#1A272727"
            android:autofillHints="" />
    </ScrollView>

    <!-- 底部按钮栏：清空、字数统计、确定，三者水平居中对齐 -->
    <LinearLayout
        android:id="@+id/layoutEditorBottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dp_24">

        <Button
            android:id="@+id/btnEditorClear"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/btn_clear"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/btn_main_bg"
            android:textColor="@color/white"
            android:stateListAnimator="@animator/btn_scale_animator" />

        <TextView
            android:id="@+id/tvEditorCharCount"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/char_count"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/gray_666" />

        <Button
            android:id="@+id/btnEditorOk"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/btn_ok"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/btn_main_bg"
            android:textColor="@color/white"
            android:stateListAnimator="@animator/btn_scale_animator" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 