<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 单层阴影 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A272727" />
            <corners android:radius="16dp" />
            <padding
                android:bottom="2dp"
                android:right="2dp" />
        </shape>
    </item>

    <!-- 主背景层 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/theme_light_bg"
                android:endColor="@color/theme_lighter_bg"
                android:startColor="#FFFFFF" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/theme_border" />
        </shape>
    </item>
</layer-list> 