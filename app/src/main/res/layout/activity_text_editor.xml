<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editorToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@android:color/white"
        app:title="文本编辑器"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnEditorInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_info_white_24dp"
        android:contentDescription="使用说明"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="@id/editorToolbar"
        app:layout_constraintBottom_toBottomOf="@id/editorToolbar"
        app:layout_constraintEnd_toEndOf="@id/editorToolbar"
        android:padding="8dp" />

    <ScrollView
        android:id="@+id/editorScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/editorToolbar"
        app:layout_constraintBottom_toTopOf="@id/btnEditorClear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入或粘贴要编辑的大段文本..."
            android:textSize="16sp"
            android:gravity="top|start"
            android:minLines="10"
            android:maxLines="100"
            android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textCursorDrawable="@drawable/cursor_main_dark"
            android:textSelectHandleLeft="@drawable/handle_main_dark_left"
            android:textSelectHandleRight="@drawable/handle_main_dark_right"
            android:textSelectHandle="@drawable/handle_main_dark_center"
            android:textColorHighlight="#33272727" />
    </ScrollView>

    <Button
        android:id="@+id/btnEditorClear"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="清空"
        android:textSize="16sp"
        android:background="@drawable/btn_main_bg"
        android:textColor="@color/white"
        android:stateListAnimator="@animator/btn_scale_animator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEditorOk"
        android:layout_margin="24dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnEditorOk"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="确定"
        android:textSize="16sp"
        android:background="@drawable/btn_main_bg"
        android:textColor="@color/white"
        android:stateListAnimator="@animator/btn_scale_animator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnEditorClear"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 